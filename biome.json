{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "node_modules",
      ".next",
      ".next-dev"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      ".next",
      ".next-dev",
      "node_modules",
      ".vscode"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "noCommonJs": "error",
        "noDuplicateElseIf": "error",
        "noDuplicateProperties": "error",
        "noIrregularWhitespace": "error",
        "recommended": true
      },
      "style": {
        "noUselessElse": "error",
        "useImportType": "error"
      },
      "suspicious": {
        "noConsole": {
          "options": {
            "allow": [
              "info",
              "error"
            ]
          },
          "level": "warn"
        },
        "noDebugger": "error",
        "noImplicitAnyLet": "error"
      },
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedImports": "error",
        "noUnusedFunctionParameters": "error",
        "noUnusedVariables": "error",
        "noUnknownFunction": "error",
        "noUndeclaredDependencies": "error",
        "noUnreachable": "error"
      }
    },
    "ignore": [
      "node_modules",
      ".next",
      ".next-dev"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "lineWidth": 160,
      "enabled": false
    }
  }
}
